<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/layout_bg_light"
    android:padding="5dip"
    android:layout_margin="10dip" >
    
    <TextView android:id="@+id/textview_account_headline"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/fragment_account_data"
	    android:textColor="#000000"
	    android:textSize="16sp"
	    android:padding="10dip"
	    android:layout_marginLeft="0dip"
	    android:layout_marginTop="10dip"
	    android:layout_marginBottom="10dip" />
    
    <TextView android:id="@+id/textview_account_data"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="" 
	    android:background="@drawable/layout_bg_dark"
	    android:textColor="#ff6000"
	    android:padding="10dip"
	    android:layout_marginLeft="5dip"
	    android:layout_marginTop="10dip"
	    android:layout_marginBottom="10dip" />
    
   <Button
        android:id="@+id/button_create_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:text="@string/button_create_account"
        android:onClick="createAccount" />
    
    <Button
        android:id="@+id/button_switch_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:text="@string/button_view_login"
        android:onClick="switchAccount" />
    
</LinearLayout>